<% layout("/layouts/boilerplate") %>

<div class="container">
    <!-- Hero Section -->
    <header class="hero text-center text-white" style="background-image: url('https://images.unsplash.com/photo-1486312338215-1e2b5d7bb377?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8Y29ycmVjdHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=1600&q=60'); background-size: cover; background-position: center;">
        <div class="hero-overlay py-5">
            <h1 class="display-4">Welcome to Your Dream Getaway</h1>
            <p class="lead">Discover stunning vacation rentals around the world. Your next adventure starts here.</p>
            <a href="/listings" class="btn btn-primary btn-lg">Explore Listings</a>
        </div>
    </header>
    <br>

    <!-- Featured Listings -->
    <section class="featured-listings py-5">
        <h2 class="text-center">Featured Listings</h2> 
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListings.slice(0, 3)){ %> <!-- Display first 3 listings -->
                <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col mb-4">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_images" style="height: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%=listing.title%></h5>
                        <p class="card-text">
                            &#8377; <%=listing.price.toLocaleString("en-IN")%> /night
                        </p>
                    </div>
                </div>
                </a>
            <% } %>
        </div>
    </section>

    <!-- About Section -->
    <section class="about py-5">
        <div class="row">
            <div class="col-md-6">
                <h2>About Us</h2>
                <p>We offer a curated selection of beautiful vacation rentals to help you find your perfect getaway. Whether you're looking for a relaxing beachside retreat, a vibrant city escape, or a cozy mountain cabin, we've got something for everyone. Our listings are carefully vetted to ensure quality and comfort.</p>
            </div>
            <div class="col-md-6">
                <h2>Why Choose Us?</h2>
                <ul>
                    <li>Handpicked listings with quality assurance.</li>
                    <li>Wide range of destinations and property types.</li>
                    <li>Easy booking process and customer support.</li>
                    <li>Exclusive offers and discounts.</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact py-5 text-center">
        <h2>Get in Touch</h2>
        <p>If you have any questions or need assistance, feel free to <a href="/contact" class="btn btn-secondary">Contact Us</a>.</p>
    </section>
</div>

<style>
.hero {
    position: relative;
    color: #fff;
    text-align: center;
    padding: 5rem 0;
}
.hero-overlay {
    background: rgba(0, 0, 0, 0.5);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.featured-listings .card {
    border: none;
    transition: transform 0.3s ease;
}
.featured-listings .card:hover {
    transform: scale(1.05);
}
</style>
